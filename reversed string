import java.util.Scanner;
class helloworld{
    public static void main(String[]args){
        Scanner sc=new Scanner(System.in);
        String str=sc.nextLine();
        String nstr="";
        char ch;
        
        for(int i=0;i<str.length();i++){
            ch=str.charAt(i);
            nstr=ch+nstr;
        }
        System.out.println("reversed string: "+nstr);
    }
}
